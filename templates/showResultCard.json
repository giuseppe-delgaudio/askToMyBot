{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${image_1}"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "url": "${image_2}"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Il Tuo Risultato",
            "wrap": true,
            "size": "Large"
        },
        {
            "type": "TextBlock",
            "text": "${result}",
            "wrap": true,
            "size": "Medium"
        }
    ]
}